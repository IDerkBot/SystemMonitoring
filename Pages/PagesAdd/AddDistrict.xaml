<Page x:Class="SystemMonitoring.Pages.PagesAdd.AddDistrict"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SystemMonitoring.Pages.PagesAdd"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="AddDistrict">

    <Grid>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Введите название района:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox Name="DistrictName" Height="25" Margin="0,20,0,0" VerticalAlignment="Top"/>
            <Button Content="Отмена"   HorizontalAlignment="Right" Width="75" Height="25" Margin="0,55,85,0" Click="Cancel_Click"/>
            <Button Content="Добавить" HorizontalAlignment="Right" Width="75" Height="25" Margin="0,55,0,0" Click="Add_Click" />
        </Grid>
    </Grid>
</Page>