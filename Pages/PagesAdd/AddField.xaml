<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SystemMonitoring.Pages.PagesAdd"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" xmlns:Obselete="clr-namespace:Xceed.Wpf.Toolkit.Obselete;assembly=Xceed.Wpf.Toolkit" x:Class="SystemMonitoring.Pages.PagesAdd.AddField"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="AddField">

    <Grid>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Введите номер поля:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Obselete:MaskedTextBox Name="FieldValue" Height="25" Margin="0,20,0,0" VerticalAlignment="Top" Mask="&lt;##:##:#######:##&gt;"/>
            <Button Content="Отмена"   HorizontalAlignment="Right" Width="75" Height="25" Margin="0,55,85,0" Click="Cancel_Click"/>
            <Button Content="Добавить" HorizontalAlignment="Right" Width="75" Height="25" Margin="0,55,0,0"  Click="Add_Click"/>
        </Grid>
    </Grid>
</Page>
